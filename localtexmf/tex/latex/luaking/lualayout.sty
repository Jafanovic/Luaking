% ~~~~~~~~ Title Page ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
\newcommand{\LuaPartTitle}[3]{
  \begin{titlepage}
    \BgThispage           % background
    \setpartpreamble[u]{
      \begin{center}
        \vspace{5cm}
        {\fontsize{40}{52}\selectfont\uppercase{\textbf{#2}}} \\
      \end{center}
    }
    \part[\textcolor{red}{#1: #2}]{#1}\label{part:#3}
  \end{titlepage}
}  

